<div class="my-3">
    <h6 class="lead">
        <i class="fa fa-filter text-secondary"></i>
        Filters
    </h6>
</div>

<div class="my-2">
    <form method="get" asp-action="Index">
        <input type="hidden" name="categoryId" value="@(Context.Request.Query["categoryId"])" /> <!--if there's a QueryString called categoryId, keep it here in the form.  (?categoryId=1)-->
        <div class="form-group my-2">
            <input class="form-control" name="SearchTerm" placeholder="Search">
        </div>
        <div  style="display: flex;" class="form-row">
            <div class="form-group col-md-5 my-2">
                <input type="text" class="form-control" name="MinPrice" placeholder="Min Price">
            </div>
            <div class="col-md-1 my-2 d-flex justify-content-center align-items-center">
                <span class="fas fa-chevron-right"></span>
            </div>
            <div class="form-group col-md-5 my-2">
                <input  type="text" class="form-control" name="MaxPrice" placeholder="Max Price">
            </div>
        </div>

        <div class="form-group my-2">
            <button type="submit" class="btn btn-sm btn-primary">Filter</button>
        </div>
    </form>
</div>