@model IEnumerable<Category>

<div class="mt-3">
    <h6 class="lead">
        <i class="fa fa-solid fa-bars text-secondary"></i>
        Categories
    </h6>
</div>

<div class="my-3">
    <ul class="list-group"> <!-- we show all the categories available -->
        @foreach (var category in Model) 
        { 
            <li class="list-group-item">
                <a asp-action="Index" asp-route-categoryId = "@category.CategoryId">@category.CategoryName</a> <!-- we create query string with "asp-route-categoryId" we send it to index in product controller as request parameter which is the category Id  -->
                
            </li> 
        }
    </ul>
</div>